{
  "name": "functionkit",
  "version": "3.0.0",
  "description": "A package with functions for example, sum 2 numbers",
  "main": "lib/app.js",
  "types": "lib/app.d.ts",
  "scripts": {
    "test": "jest --config jestconfig.json",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shahoob/functionKit.git"
  },
  "author": "Shehab Ali Tweel",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/shahoob/functionKit/issues"
  },
  "homepage": "https://github.com/shahoob/functionKit#readme",
  "devDependencies": {
    "@types/jest": "^25.1.4",
    "@types/node": "^13.9.5",
    "jest": "^25.2.4",
    "prettier": "^2.0.2",
    "ts-jest": "^25.2.1",
    "tslint": "^6.1.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.8.3"
  },
  "files": [
    "lib/**/*"
  ]
}
